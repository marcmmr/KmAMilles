<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="edu.upc.eseiaat.pma.kmamilles.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/Km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Km"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_alignBaseline="@+id/num_km"
        android:layout_alignBottom="@+id/num_km"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/num_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btn_a_milles"
        android:layout_toEndOf="@+id/btn_a_milles" />

    <Button
        android:id="@+id/btn_a_milles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Milles"
        tools:layout_editor_absoluteY="112dp"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/num_km"
        android:layout_alignRight="@+id/Milles"
        android:layout_alignEnd="@+id/Milles" />

    <Button
        android:id="@+id/btn_a_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Km"
        tools:layout_editor_absoluteY="112dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/btn_a_milles"
        android:layout_alignBottom="@+id/btn_a_milles"
        android:layout_alignRight="@+id/num_km"
        android:layout_alignEnd="@+id/num_km" />

    <TextView
        android:id="@+id/Milles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milles"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btn_a_milles"
        android:layout_alignLeft="@+id/Km"
        android:layout_alignStart="@+id/Km" />

    <EditText
        android:id="@+id/num_milles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="153dp"
        android:layout_alignBaseline="@+id/Milles"
        android:layout_alignBottom="@+id/Milles"
        android:layout_toRightOf="@+id/Milles"
        android:layout_toEndOf="@+id/Milles"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>
